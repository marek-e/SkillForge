{
  "name": "skillforge",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "oxlint apps packages",
    "lint:fix": "oxlint --fix apps packages",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "typecheck": "pnpm -r typecheck",
    "electron:dev": "concurrently --names ui,electron \"pnpm --filter @skillforge/ui dev\" \"pnpm --filter @skillforge/electron dev\"",
    "electron:build": "pnpm build && pnpm --filter @skillforge/electron build && pnpm --filter @skillforge/electron dist"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.15.9"
}
