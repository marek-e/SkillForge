{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "workspaces": {
    ".": {},
    "apps/ui": {
      "project": ["src/**/*.{ts,tsx}"],
      "ignore": ["src/components/ui/**", "src/components/nav-user.tsx"],
      "ignoreDependencies": [
        "@base-ui/react",
        "cmdk",
        "date-fns",
        "embla-carousel-react",
        "react-day-picker",
        "react-resizable-panels",
        "vaul"
      ]
    },
    "apps/runtime": {
      "project": ["src/**/*.ts"],
      "ignoreDependencies": ["zod"]
    },
    "apps/electron": {
      "project": ["src/**/*.ts"],
      "ignoreDependencies": ["better-sqlite3"]
    },
    "packages/core": {
      "project": ["src/**/*.ts"]
    },
    "packages/connectors": {
      "project": ["src/**/*.ts"],
      "ignoreDependencies": ["zod"]
    }
  },
  "ignore": ["**/dist/**", "**/release/**"],
  "ignoreExportsUsedInFile": true
}
