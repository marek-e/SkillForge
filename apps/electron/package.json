{
  "name": "@skillforge/electron",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main.cjs",
  "scripts": {
    "dev": "tsup --watch --onSuccess \"electron .\"",
    "build": "tsup",
    "dist": "electron-builder",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.0",
    "@skillforge/runtime": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3"
  },
  "build": {
    "appId": "com.skillforge.app",
    "productName": "SkillForge",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../ui/dist",
        "to": "ui"
      }
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
