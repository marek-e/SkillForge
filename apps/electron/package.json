{
  "name": "@skillforge/electron",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main.cjs",
  "scripts": {
    "dev": "tsup --watch --onSuccess \"electron .\"",
    "build": "tsup",
    "dist": "electron-builder",
    "typecheck": "tsc --noEmit",
    "rebuild-sqlite": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@skillforge/runtime": "workspace:*",
    "better-sqlite3": "^12.6.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "@types/node": "^25.2.2",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.skillforge.app",
    "productName": "SkillForge",
    "icon": "icon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "icon.png",
      "node_modules/better-sqlite3/**/*"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "extraResources": [
      {
        "from": "../ui/dist",
        "to": "ui"
      },
      {
        "from": "../runtime/drizzle",
        "to": "drizzle"
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  }
}
